<%- include('partials/_header') %>

<div class="">
  
  <div class="d-flex justify-content-center">
    
    <div id="container-slider img-container" class="col-lg-8 d-flex mt-lg-3">
      
      <div id="slider-izquierdo" class="">
        <button class="bg-white border-0 overlay-text "> < </button>
      </div>
      
      <div class="slider-screen img-fluid">
        <img name="Imagen" class="d-block w-100">
      </div>
      
      
      <div id="slider-derecho" class="">
        <button class="bg-white border-0 overlay-text"> > </button>
      </div>  
      
    </div>
    
  </div>  

  <div class="">
    <button class=""><a href="/">HOME</a></button>
  </div>
  
  <!-- ----------- CONTENIDO ----------------- -->

  <div class="d-flex justify-content-center">

    <div class="col-lg-8">
      <% data.forEach((propiedad,index) => {%>
      <div id="carpeta" aria-valuetext="<%= apto %>"></div>
      <% if (propiedad.propiedad == apto){ %>
      
        <div class="model2 ml-4 mr-4 mt-2">
          <tr>  
            <h3><%= propiedad.titulo %></h3>
            <h5>Loft en <%= propiedad.ubicacion %>, Barranquilla</h5>
            <h6><%= propiedad.huespedes %> huéspedes  -  <%= propiedad.habitacion %> habitaciones  -  <%=propiedad.camaSizes.length %> camas  -  <%= propiedad.bano %></h6>
          </tr> <hr />  

        <h6 class='texto-apoyo'>Dónde vas a dormir ?</h6>
              
        <div class="d-flex">
          <% for (i = 0; i < propiedad.camaSizes.length; ++i) { %>
          <div class="p-3 align-items-center border border-2 mx-2 rounded">
            <h6>Habitación <%=i + 1 %></h6>
            <p><%=propiedad.camaSizes[i] %></p>
          </div>
          <% } %>  

          <% if(propiedad.sofaCama > 0) { %>
            <div class="p-3">
              <h6>Sofá Cama <%=propiedad.sofaCama %></h6>
            </div>
          <% } %>  

        </div>
        <hr />

        <h6 class="mb-4">Lo que este lugar ofrece</h6>
        
        <div class="">

          <ul class="">
            <p class="fw-bold">Cocina</p>
            <% for (a = 0 ; a < (propiedad.amenInstalacionesYServicios).length; ++a) { %>
            <div class="">
              <li> <%=propiedad.amenCocina[a]  %> </li>
            </div>
            <% } %>
          </ul>

          <ul class="">
            <p class="fw-bold">Instalaciones y Servicios</p>
            <% for (a = 0 ; a < (propiedad.amenInstalacionesYServicios).length; ++a) { %>
            <div class="">
              <li> <%=propiedad.amenInstalacionesYServicios[a]  %> </li>
            </div>
            <% } %>
          </ul>
        </div>

              
              <div class="amenidades d-none">
                <ul class='formato-amenid'>
                  <li class='titulo-amenidades'>Dormitorio y Lavadero</li>
                  <li class='texto-amenid'>Lavadora en la vivienda: Gratis</li>
                  <li class='texto-amenid'>Secadora en la vivienda: Gratis</li>
                  <li class='texto-amenid'>Ganchos para la ropa</li>
                  <li class='texto-amenid'>Sábanas</li>
                  <li class='texto-amenid'>Almohadas y mantas</li>
                  <li class='texto-amenid'>Plancha</li>
                  <li class='texto-amenid'>Espacio para guardar ropa: Armario</li>
                  
                  <li class='titulo-amenidades'>Entretenimiento</li>
                  <li class='texto-amenid'>Conexión Ethernet</li>
                  <li class='texto-amenid'>Televisor de alta definición Smart TV</li>
                  <li class='texto-amenid'>Gimnasio</li>
                  <li class='texto-amenid'>Piscina</li>
                  
                  <li class='titulo-amenidades'>Refrigeración</li>
                  <li class='texto-amenid'>Sistema de aire acondicionado tipo split</li>
                  <li class='texto-amenid'>Ventiladores portátiles</li>
                  
                  <li class='titulo-amenidades'>Internet y oficina</li>
                  <li class='texto-amenid'>Wifi</li>
                  <li class='texto-amenid'>Zona de trabajo</li>
                  
                  <li class='titulo-amenidades'>Cocina</li>


                  
                  <br /> <br />
                </ul>
                
              </div>
              
              <div>
                <iframe src="<%=propiedad.mapa %>" class="w-100 mh-100" style="height: 400px;"> </iframe>
              </div>

              <% } %>
              <% }); %>
            </div>
    </div>  

  </div>

    <script src="slider.js"></script>
  
  </div>
</div>


  </body>
</html>